{
  "name": "react-gtm-kit-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-gtm-kit/react-gtm-kit.git"
  },
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r exec rm -rf dist",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "pnpm -r lint",
    "prepare": "husky install",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "test:related": "pnpm exec jest --config packages/core/jest.config.cjs --runInBand --findRelatedTests --passWithNoTests",
    "e2e:test": "playwright test -c e2e/playwright.config.ts",
    "verify:runtime-deps": "node scripts/check-runtime-deps.mjs",
    "size": "size-limit --config size-limit.config.cjs",
    "verify:lightweight": "pnpm run verify:runtime-deps && pnpm run size",
    "examples:smoke": "pnpm --filter @react-gtm-kit/example-* --workspace-concurrency=1 run smoke",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@playwright/test": "^1.48.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "size-limit": "^11.1.6",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "esbuild": "^0.21.5",
    "husky": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "semantic-release": "^23.1.1",
    "tsup": "7.2.0",
    "typescript": "5.4.5",
    "vitepress": "^1.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0 --fix",
      "prettier --write",
      "pnpm exec jest --config packages/core/jest.config.cjs --runInBand --findRelatedTests --passWithNoTests --"
    ],
    "*.{cjs,mjs,json,md,mdx,yml,yaml}": [
      "prettier --write"
    ]
  }
}
